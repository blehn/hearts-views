#filters_wrapper
  #filters
    %p
      %input{:value => "Update Search", :type => "submit"}
    %ul
      %li
        %label Age
        %br
        %span 22 - 30
        .filter_group
          %input.input_tiny{:type => "text", :placeholder => "min"}
          %input.input_tiny{:type => "text", :placeholder => "max"}
      %li
        %label Height
        %br
        %span 5' 1" - 5' 11"
        .filter_group
          %select.input_small
            %option min
            %option 5'0"
            %option 5'11"
          %select.input_small
            %option max
            %option 5'0"
            %option 5'11"
      %li
        %label Body Type
        %br
        %span skinny, thin, athletic, fit, average, curvy, overweight, muscular
        .filter_group
          %input{:type => "checkbox", :id => "checkbox_skinny"}
          %label.label_checkbox{:for => "checkbox_skinny"} Skinny
          %br
          %input{:type => "checkbox"}
          %label.label_checkbox Thin
          %br
          %input{:type => "checkbox"}
          %label.label_checkbox Fit
          %br
          %input{:type => "checkbox"}
          %label.label_checkbox Athletic
          %br
          %input{:type => "checkbox"}
          %label.label_checkbox Average
          %br
          %input{:type => "checkbox"}
          %label.label_checkbox Muscular
          %br
          %input{:type => "checkbox"}
          %label.label_checkbox Curvy
          %br
          %input{:type => "checkbox"}
          %label.label_checkbox Overweight
      %li
        %label Cigarattes
        %br
        %span never, sometimes, while drinking
        .filter_group
          %input{:type => "checkbox"}
          %label.label_checkbox never
          %br
          %input{:type => "checkbox"}
          %label.label_checkbox sometimes
          %br
          %input{:type => "checkbox"}
          %label.label_checkbox while drinking
          %br
          %input{:type => "checkbox"}
          %label.label_checkbox often
      -#%li
        -#%label Alcohol
        -#%br
        -#%span never, sometimes, socially
      -#%li
